<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/more_info_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LOCAL"
            android:textSize="18dp"
            android:paddingVertical="15dp"
            android:paddingHorizontal="15dp"
            android:background="@drawable/border_bottom"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/montserrat_regular"/>
        <ImageView
            android:id="@+id/close_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_close"
            android:padding="10dp"
            android:layout_gravity="right"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/more_info_label_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Nome"/>
        <TextView
            android:id="@+id/more_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/more_info_label_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Address"/>
        <WebView
            android:id="@+id/more_info_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"/>
        <TextView
            android:id="@+id/more_info_label_town"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Freguesia"/>
        <TextView
            android:id="@+id/more_info_town"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/more_info_label_geo_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Geo"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/more_info_geo_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/map_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_locationmark"
                    android:paddingHorizontal="15dp"/>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>