<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/more_info_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="LOCAL"
        android:textSize="18dp"
        android:paddingVertical="15dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/border_bottom"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/montserrat_regular"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/more_info_label_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Nome"/>
        <TextView
            android:id="@+id/more_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/more_info_label_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Address"/>
        <WebView
            android:id="@+id/more_info_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"/>
        <TextView
            android:id="@+id/more_info_label_town"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Freguesia"/>
        <TextView
            android:id="@+id/more_info_town"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/more_info_label_geo_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Geo"/>
        <TextView
            android:id="@+id/more_info_geo_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>